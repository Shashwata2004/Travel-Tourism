<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travel.frontend.controller.AdminDestinationsController"
            stylesheets="@/css/login.css">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" id="navbar">
            <padding><Insets topRightBottomLeft="10"/></padding>
            <Button text="Back" onAction="#onBack"/>
            <Button text="Packages" onAction="#goPackages"/>
            <Button text="Hotels" onAction="#goHotels"/>
            <Label text="Admin â€” Manage Destinations" id="cardTitle"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Refresh" onAction="#onRefresh"/>
            <Button text="New" onAction="#onNew"/>
            <Button text="Save" onAction="#onSave" id="primaryBtn"/>
            <Button text="Delete" onAction="#onDelete"/>
        </HBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.35">
            <items>
                <VBox spacing="8">
                    <padding><Insets topRightBottomLeft="10"/></padding>
                    <Label text="Destinations" styleClass="sectionTitle"/>
                    <ListView fx:id="listView" prefWidth="260"/>
                </VBox>
                <VBox spacing="8">
                    <padding><Insets topRightBottomLeft="10"/></padding>
                    <GridPane hgap="10" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="75"/>
                        </columnConstraints>

                        <Label text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Region" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="regionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Tags (comma separated)" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="tagsField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Best Season" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="seasonField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Image URL" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="imageField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Package Available" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <Label fx:id="pkgAvailableLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                        <Label text="Active" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <CheckBox fx:id="activeBox" GridPane.rowIndex="6" GridPane.columnIndex="1" selected="true"/>
                    </GridPane>
                    <Label fx:id="statusLabel" id="statusLabel"/>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
