<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.SVGPath?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.travel.frontend.controller.PackageDetailsController"
           fx:id="detailRoot"
           stylesheets="@/css/login.css,@/css/package_details.css"
           styleClass="detailRoot">
    <children>
        <Pane fx:id="blobLayer" styleClass="blobLayer">
            <children>
                <Circle centerX="180" centerY="120" radius="180" styleClass="blobA"/>
                <Circle centerX="680" centerY="520" radius="200" styleClass="blobB"/>
                <Circle centerX="1100" centerY="560" radius="350" styleClass="blobC"/>
            </children>
        </Pane>
        <Pane styleClass="gridOverlay"/>
        <Pane fx:id="particleLayer" />

        <BorderPane fx:id="detailShell" styleClass="detailShell">
            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
            <top>
                <HBox fx:id="topBar" spacing="10" alignment="CENTER_LEFT">
                    <Label text="Package Details" styleClass="detailTitle"/>
                </HBox>
            </top>
            <center>
                <ScrollPane fitToWidth="true" fitToHeight="false" styleClass="pageScroll">
                    <content>
                        <HBox spacing="18" alignment="TOP_LEFT">
                            <VBox fx:id="heroColumn" spacing="16" alignment="TOP_LEFT" maxWidth="720" HBox.hgrow="ALWAYS" styleClass="heroColumn">
                                <StackPane fx:id="heroContainer" prefWidth="740" prefHeight="460" styleClass="detailHero">
                                    <ImageView fx:id="mainImage" fitWidth="740" fitHeight="460" preserveRatio="false" smooth="true"/>
                                </StackPane>
                                <HBox spacing="10">
                                    <StackPane styleClass="thumbWrap">
                                        <ImageView fx:id="thumbMain" fitWidth="120" fitHeight="80" preserveRatio="true" smooth="true"
                                                   onMouseClicked="#showMain"/>
                                    </StackPane>
                                    <StackPane styleClass="thumbWrap">
                                        <ImageView fx:id="thumbAlt" fitWidth="120" fitHeight="80" preserveRatio="true" smooth="true"
                                                   onMouseClicked="#showAlt"/>
                                    </StackPane>
                                    <StackPane styleClass="thumbWrap">
                                        <ImageView fx:id="thumb3" fitWidth="120" fitHeight="80" preserveRatio="true" smooth="true"
                                                   onMouseClicked="#show3"/>
                                    </StackPane>
                                    <StackPane styleClass="thumbWrap">
                                        <ImageView fx:id="thumb4" fitWidth="120" fitHeight="80" preserveRatio="true" smooth="true"
                                                   onMouseClicked="#show4"/>
                                    </StackPane>
                                    <StackPane styleClass="thumbWrap">
                                        <ImageView fx:id="thumb5" fitWidth="120" fitHeight="80" preserveRatio="true" smooth="true"
                                                   onMouseClicked="#show5"/>
                                    </StackPane>
                                </HBox>
                                <TabPane styleClass="detailTabs"
                                         HBox.hgrow="ALWAYS"
                                         maxWidth="Infinity">
                                    <tabs>
                                        <Tab text="Overview" closable="false">
                                            <content>
                                                <Label fx:id="overviewText"
                                                       wrapText="true"
                                                       textOverrun="CLIP"
                                                       styleClass="detailBodyText"
                                                       maxWidth="Infinity"
                                                       prefWidth="760"/>
                                            </content>
                                        </Tab>
                                        <Tab text="Location" closable="false">
                                            <content>
                                                <Label fx:id="locationPointsText"
                                                       wrapText="true"
                                                       textOverrun="CLIP"
                                                       styleClass="detailBodyText"
                                                       maxWidth="Infinity"
                                                       prefWidth="760"/>
                                            </content>
                                        </Tab>
                                        <Tab text="Timing" closable="false">
                                            <content>
                                                <VBox fx:id="timingContainer" spacing="10" styleClass="itineraryList"/>
                                            </content>
                                        </Tab>
                                    </tabs>
                                </TabPane>
                            </VBox>

                            <VBox fx:id="infoCardBox" spacing="14" prefWidth="420" maxWidth="450" styleClass="infoCard">
                                <Label text="Premium Experience" styleClass="infoBadge"/>
                                <Label fx:id="nameLabel" styleClass="infoName"/>
                                <HBox spacing="6" alignment="CENTER_LEFT">
                                    <SVGPath content="M12 2C8.686 2 6 4.686 6 8.001c0 4.72 6 13 6 13s6-8.28 6-13C18 4.686 15.314 2 12 2zm0 9.25a3.25 3.25 0 1 1 0-6.5 3.25 3.25 0 0 1 0 6.5z"
                                             fill="#ff5f6d"
                                             scaleX="0.9"
                                             scaleY="0.9" />
                                    <Label fx:id="locationLabel" styleClass="infoLocation"/>
                                </HBox>
                                <VBox fx:id="pricePanel" spacing="4" styleClass="pricePanel">
                                    <Label text="Starting From" styleClass="priceHint"/>
                                    <Label fx:id="priceLabel" styleClass="priceBig" wrapText="true"/>
                                    <Label text="per person" styleClass="priceHint"/>
                                </VBox>
                                <VBox spacing="12">
                                    <HBox spacing="8" alignment="CENTER_LEFT" styleClass="infoRow">
                                        <Label text="⏲" styleClass="infoIcon"/>
                                        <Label text="Duration" styleClass="infoLabel"/>
                                        <Pane HBox.hgrow="ALWAYS"/>
                                        <Label fx:id="durationLabel" styleClass="infoValue"/>
                                    </HBox>
                                    <HBox spacing="8" alignment="CENTER_LEFT" styleClass="infoRow">
                                        <SVGPath content="M8 3.5a3 3 0 1 1 0 6 3 3 0 0 1 0-6zm8 1.5a2.5 2.5 0 1 1 0 5 2.5 2.5 0 0 1 0-5zM8 11c-3.59 0-6.5 2.3-6.5 5v2.5h9V16c0-.59.15-1.17.44-1.69A6.87 6.87 0 0 0 8 11zm5.54 1.16c-.37.16-.71.35-1.02.57-.36.25-.6.47-.74.61-.2.2-.3.33-.34.39-.07.1-.14.22-.18.34-.15.39-.24.81-.24 1.23V18.5H20V17c0-1.82-1.63-3.18-2.8-3.8a5.44 5.44 0 0 0-3.66-.99z"
                                                 fill="#4a5568"
                                                 scaleX="0.9"
                                                 scaleY="0.9"/>
                                        <Label text="Group Size" styleClass="infoLabel"/>
                                        <Pane HBox.hgrow="ALWAYS"/>
                                        <Label fx:id="groupLabel" styleClass="infoValue"/>
                                    </HBox>
                                    <HBox spacing="12" alignment="CENTER_LEFT" styleClass="infoRow deadlineRow" maxWidth="Infinity">
                                        <SVGPath content="M5 4c-.552 0-1 .448-1 1v1H3v2h18V6h-1V5c0-.552-.448-1-1-1h-2V3h-2v2H9V3H7v2H5zm0 4v9c0 1.103.897 2 2 2h10c1.103 0 2-.897 2-2V8H5zm3 3h2v2H8v-2zm4 0h2v2h-2v-2z"
                                                 fill="#e5edff"
                                                 scaleX="1.1"
                                                 scaleY="1.1"/>
                                        <Label text="Booking Deadline" styleClass="infoLabel"/>
                                        <Pane HBox.hgrow="ALWAYS"/>
                                        <Label fx:id="deadlineLabel" styleClass="deadlineValue"/>
                                    </HBox>
                                </VBox>
                                <Button text="Book Now →" onAction="#onBookNow" styleClass="infoBook" maxWidth="Infinity" prefWidth="Infinity"/>
                            </VBox>
                        </HBox>
                    </content>
                </ScrollPane>
            </center>
        </BorderPane>
    </children>
</StackPane>
