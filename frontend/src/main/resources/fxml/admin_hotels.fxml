<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travel.frontend.controller.AdminHotelsController"
            stylesheets="@/css/login.css">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" id="navbar">
            <padding><Insets topRightBottomLeft="10"/></padding>
            <Button text="Back" onAction="#onBack"/>
            <Label fx:id="destinationLabel" text="Destination: " id="cardTitle"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Refresh" onAction="#onRefresh"/>
            <Button text="New" onAction="#onNew"/>
            <Button text="Save" onAction="#onSave" id="primaryBtn"/>
            <Button text="Delete" onAction="#onDelete"/>
        </HBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.28">
            <items>
                <VBox spacing="8">
                    <padding><Insets topRightBottomLeft="10"/></padding>
                    <Label text="Hotels" styleClass="sectionTitle"/>
                    <ListView fx:id="hotelList" prefWidth="220" prefHeight="520"/>
                </VBox>

                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                    <content>
                        <VBox spacing="12">
                            <padding><Insets topRightBottomLeft="10"/></padding>

                            <GridPane hgap="10" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="25"/>
                                    <ColumnConstraints percentWidth="75"/>
                                </columnConstraints>

                                <Label text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Rating (0-5)" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="ratingField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Real Price" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="realPriceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                <Label text="Current Price" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <TextField fx:id="currentPriceField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                                <Label text="Location" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                <TextField fx:id="locationField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                                <Label text="Rooms Count" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                                <TextField fx:id="roomsCountField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                                <Label text="Floors Count" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                                <TextField fx:id="floorsCountField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                                <Label text="Image 1" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                                <TextField fx:id="image1Field" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
                                <Label text="Image 2" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                                <TextField fx:id="image2Field" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
                                <Label text="Image 3" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                                <TextField fx:id="image3Field" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
                                <Label text="Image 4" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                                <TextField fx:id="image4Field" GridPane.rowIndex="10" GridPane.columnIndex="1"/>
                                <Label text="Image 5" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
                                <TextField fx:id="image5Field" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

                                <Label text="Gallery (comma separated)" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
                                <TextField fx:id="galleryField" GridPane.rowIndex="12" GridPane.columnIndex="1"/>
                            </GridPane>

                            <Label text="Nearby (sentences separated by .)" styleClass="sectionTitle"/>
                            <TextArea fx:id="nearbyArea" prefRowCount="3" prefHeight="80"/>

                            <Label text="Facilities (comma separated)" styleClass="sectionTitle"/>
                            <TextArea fx:id="facilitiesArea" prefRowCount="3" prefHeight="80"/>

                            <Label text="Description" styleClass="sectionTitle"/>
                            <TextArea fx:id="descriptionArea" prefRowCount="4" prefHeight="120"/>

                            <Label fx:id="statusLabel" id="statusLabel"/>
                            <Button text="Manage Rooms" onAction="#onManageRooms" id="primaryBtn"/>
                        </VBox>
                    </content>
                </ScrollPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>
