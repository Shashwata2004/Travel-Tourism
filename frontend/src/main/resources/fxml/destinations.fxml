<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.SVGPath?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.travel.frontend.controller.DestinationsController"
           stylesheets="@/css/login.css,@/css/packages.css,@/css/destinations.css"
           styleClass="destinationsRoot">
    <children>
        <Pane fx:id="orbLayer" styleClass="orbLayer">
            <children>
                <Circle fx:id="orbA" centerX="180" centerY="160" radius="200" styleClass="orbA"/>
                <Circle fx:id="orbB" centerX="980" centerY="520" radius="220" styleClass="orbB"/>
                <Circle fx:id="orbC" centerX="1240" centerY="280" radius="210" styleClass="orbC"/>
            </children>
        </Pane>

        <VBox spacing="18" fillWidth="true" styleClass="destContent">
            <fx:include source="navbar.fxml" fx:id="navbar"/>

            <ScrollPane fitToWidth="true"
                        hbarPolicy="NEVER"
                        vbarPolicy="AS_NEEDED"
                        styleClass="destScroll rootScroll">
                <content>
                    <VBox spacing="26" alignment="TOP_LEFT">

                        <StackPane styleClass="heroSection">
                            <VBox alignment="CENTER" spacing="14">
                                <Label styleClass="heroBadge">
                                    <graphic>
                                        <HBox alignment="CENTER" spacing="8">
                                            <StackPane styleClass="heroBadgeIconWrap">
                                                <SVGPath styleClass="pinIcon"
                                                         content="M12 2c-3.3137 0-6 2.6863-6 6 0 4.5 6 10 6 10s6-5.5 6-10c0-3.3137-2.6863-6-6-6zm0 8.2c-1.215 0-2.2-.985-2.2-2.2 0-1.215.985-2.2 2.2-2.2 1.215 0 2.2.985 2.2 2.2 0 1.215-.985 2.2-2.2 2.2z"/>
                                                <Circle radius="2" styleClass="pinCenter"/>
                                            </StackPane>
                                            <Label text="Explore Bangladesh" styleClass="heroBadgeText"/>
                                        </HBox>
                                    </graphic>
                                </Label>
                                <Label text="Discover Amazing Destinations" styleClass="heroTitle"/>
                                <Label text="From pristine beaches to majestic mountains, explore the most breathtaking destinations that Bangladesh has to offer."
                                       wrapText="true"
                                       maxWidth="640"
                                       alignment="CENTER"
                                       textAlignment="CENTER"
                                       styleClass="heroSubtitle"/>

                                <HBox fx:id="searchWrap"
                                      alignment="CENTER_LEFT"
                                      spacing="10"
                                      styleClass="searchWrap">
                                    <Label text="&#x1F50D;" styleClass="searchIcon"/>
                                    <TextField fx:id="searchField"
                                               promptText="Search destinations by name, region, or tags..."
                                               styleClass="searchInput"
                                               HBox.hgrow="ALWAYS"/>
                                </HBox>
                            </VBox>
                        </StackPane>

                        <Label fx:id="emptyState"
                               managed="false"
                               visible="false"
                               text="No destinations match your search."
                               styleClass="emptyState"/>

                        <FlowPane fx:id="cardsContainer"
                                  hgap="18" vgap="18"
                                  prefWrapLength="1380"
                                  alignment="TOP_CENTER"
                                  styleClass="destCardsGrid"/>
                    </VBox>
                </content>
            </ScrollPane>
        </VBox>

        <!-- Fixed reload (top-right) -->
        <Button onAction="#reloadDestinations"
                styleClass="pageReloadBtn"
                StackPane.alignment="TOP_RIGHT">
            <graphic>
                <HBox alignment="CENTER" spacing="6">
                    <SVGPath styleClass="reloadIcon"
                             content="M12 5v4l3-3m-6 0 3 3V5a7 7 0 1 1-7 7h2a5 5 0 1 0 5-5z"/>
                    <Label text="Reload" styleClass="reloadLabel"/>
                </HBox>
            </graphic>
            <StackPane.margin>
                <Insets top="104" right="18" bottom="0" left="0"/>
            </StackPane.margin>
        </Button>
    </children>
</StackPane>
