<?xml version="1.0" encoding="UTF-8"?>

<!-- Creates the gradient hero banner that greets a signed-in user with their
     name and offers quick links to other sections.
     - StackPane keeps the hero centered on all screen sizes
     - Buttons match the navbar shortcuts so navigation is instant -->
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.SVGPath?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.travel.frontend.controller.WelcomeController"
           fx:id="rootPane"
           stylesheets="@/css/login.css,@/css/welcome.css"
           styleClass="heroRoot">
    <children>
        <Pane fx:id="floatingDots" styleClass="floatingDots">
            <children>
                <Circle centerX="160" centerY="120" radius="6" styleClass="dot"/>
                <Circle centerX="420" centerY="80" radius="8" styleClass="dot"/>
                <Circle centerX="620" centerY="150" radius="5" styleClass="dot"/>
                <Circle centerX="260" centerY="260" radius="4" styleClass="dot"/>
                <Circle centerX="520" centerY="260" radius="6" styleClass="dot"/>
                <Circle centerX="780" centerY="220" radius="5" styleClass="dot"/>
                <Circle centerX="940" centerY="120" radius="7" styleClass="dot"/>
            </children>
        </Pane>
        <VBox fx:id="contentBox" spacing="22" alignment="CENTER">
            <VBox alignment="CENTER" spacing="4">
                <Label text="Welcome," styleClass="heroTitle"/>
                <Label fx:id="usernameLabel" styleClass="heroTitle heroName userName"/>
            </VBox>
            <Label text="Plan trips. Manage bookings. Explore destinations." styleClass="heroSubtitle"/>

            <HBox spacing="14" alignment="CENTER">
                <Button text="Personal Info" contentDisplay="TOP" onAction="#goPersonal" styleClass="heroAction">
                    <graphic>
                        <StackPane styleClass="heroIconWrap">
                            <SVGPath content="M12 2.5a4 4 0 1 1 0 8 4 4 0 0 1 0-8zm0 9c4.418 0 8 3.134 8 7v2H4v-2c0-3.866 3.582-7 8-7z"
                                     fill="#ffffff"
                                     scaleX="0.9"
                                     scaleY="0.9"/>
                        </StackPane>
                    </graphic>
                </Button>
                <Button text="Packages" contentDisplay="TOP" onAction="#goPackages" styleClass="heroAction">
                    <graphic>
                        <Label text="ðŸ“¦" styleClass="heroIcon"/>
                    </graphic>
                </Button>
                <Button text="Destinations" contentDisplay="TOP" onAction="#goDestinations" styleClass="heroAction">
                    <graphic>
                        <StackPane styleClass="heroIconWrap">
                            <SVGPath styleClass="pinIcon" content="M12 2c-3.3137 0-6 2.6863-6 6 0 4.5 6 10 6 10s6-5.5 6-10c0-3.3137-2.6863-6-6-6zm0 8.2c-1.215 0-2.2-.985-2.2-2.2 0-1.215.985-2.2 2.2-2.2 1.215 0 2.2.985 2.2 2.2 0 1.215-.985 2.2-2.2 2.2z"/>
                            <Circle radius="2" styleClass="pinCenter"/>
                        </StackPane>
                    </graphic>
                </Button>
                <Button text="History" contentDisplay="TOP" onAction="#goHistory" styleClass="heroAction">
                    <graphic>
                        <Label text="â²" styleClass="heroIcon"/>
                    </graphic>
                </Button>
                <Button text="About" contentDisplay="TOP" onAction="#goAbout" styleClass="heroAction">
                    <graphic>
                        <Label text="â„¹" styleClass="heroIcon"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </children>
</StackPane>
