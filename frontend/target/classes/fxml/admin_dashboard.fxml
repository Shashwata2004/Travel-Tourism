<?xml version="1.0" encoding="UTF-8"?>

<!-- Structures the admin dashboard: toolbar of actions, list of packages on
     the left, and the editable form for the selected package on the right.
     - SplitPane keeps list and form resizable
     - Toolbar buttons trigger the matching controller methods (Refresh/New/Save/Delete) -->
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travel.frontend.controller.AdminDashboardController"
            stylesheets="@/css/admin.css">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" id="navbar">
            <padding><Insets topRightBottomLeft="10"/></padding>
            <Button text="Back" onAction="#onBack"/>
            <Button text="Destinations" onAction="#goDestinations"/>
            <Label text="Admin â€” Manage Packages" id="cardTitle"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Refresh" onAction="#onRefresh"/>
            <Button text="New" onAction="#onNew"/>
            <Button text="Save" onAction="#onSave" id="primaryBtn"/>
            <Button text="View Bookings" onAction="#onViewBookings"/>
            <Button text="Delete" onAction="#onDelete"/>
        </HBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.35">
            <items>
                <VBox spacing="8">
                    <padding><Insets topRightBottomLeft="10"/></padding>
                    <Label text="Packages" styleClass="sectionTitle"/>
                    <ListView fx:id="listView" prefWidth="260"/>
                    <Button text="View All Bookings" onAction="#onViewAllBookings" />
                </VBox>
                <VBox spacing="8">
                    <padding><Insets topRightBottomLeft="10"/></padding>
                    <GridPane hgap="10" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="75"/>
                        </columnConstraints>
                        <Label text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Location" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="locationField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Base Price" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="priceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Image 1" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="image1Field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Image 2" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="image2Field" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Image 3" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <TextField fx:id="image3Field" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                        <Label text="Image 4" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <TextField fx:id="image4Field" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                        <Label text="Image 5" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                        <TextField fx:id="image5Field" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                        <Label text="Overview" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                        <TextArea fx:id="overviewArea" GridPane.rowIndex="8" GridPane.columnIndex="1" prefRowCount="3"/>

                        <Label text="Location Points" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                        <TextArea fx:id="pointsArea" GridPane.rowIndex="9" GridPane.columnIndex="1" prefRowCount="3"/>

                        <Label text="Timing" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                        <TextArea fx:id="timingArea" GridPane.rowIndex="10" GridPane.columnIndex="1" prefRowCount="2"/>

                        <Label text="Group Size" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
                        <TextField fx:id="groupSizeField" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

                        <Label text="Booking Deadline" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="bookingDeadlinePicker" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

                        <Label text="Itinerary (one per line: day|title|subtitle)" GridPane.rowIndex="13" GridPane.columnIndex="0"/>
                        <TextArea fx:id="itineraryArea" GridPane.rowIndex="13" GridPane.columnIndex="1" prefRowCount="3"/>

                        <Label text="Package Available" GridPane.rowIndex="14" GridPane.columnIndex="0"/>
                        <CheckBox fx:id="packageAvailableBox" GridPane.rowIndex="14" GridPane.columnIndex="1"/>

                        <Label text="Active" GridPane.rowIndex="15" GridPane.columnIndex="0"/>
                        <CheckBox fx:id="activeBox" GridPane.rowIndex="15" GridPane.columnIndex="1" selected="true"/>
                    </GridPane>
                    <Label fx:id="statusLabel" id="statusLabel"/>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
