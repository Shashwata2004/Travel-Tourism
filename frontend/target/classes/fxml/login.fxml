<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travel.frontend.controller.LoginController"
            stylesheets="@/css/login.css">
    <!-- Left: brand panel -->
    <left>
        <StackPane prefWidth="360" id="brandPane">
            <VBox alignment="CENTER" spacing="18">
                <Label text="Travel &amp; Tourism Management" id="brandTitle"/>
                <Label text="Plan trips. Manage bookings. Explore destinations." id="brandSubtitle" wrapText="true"/>
            </VBox>
        </StackPane>
    </left>

    <!-- Center: login card -->
    <center>
        <StackPane>
            <VBox id="card" maxWidth="420" spacing="18">
                <Label text="Welcome back ðŸ‘‹" id="cardTitle"/>
                <Label text="Sign in to continue" id="cardSubtitle"/>

                <VBox spacing="10">
                    <Label text="Email" styleClass="fieldLabel"/>
                    <TextField fx:id="emailField" promptText="you@example.com"/>
                </VBox>

                <VBox spacing="10">
                    <Label text="Password" styleClass="fieldLabel"/>
                    <PasswordField fx:id="passwordField" promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"/>
                </VBox>

                <!-- Login mode selection: User (default) or Admin -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <fx:define>
                        <ToggleGroup fx:id="roleToggle"/>
                    </fx:define>
                    <Label text="Login as" styleClass="fieldLabel"/>
                    <RadioButton fx:id="userMode" text="User" selected="true">
                        <toggleGroup>
                            <fx:reference source="roleToggle"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="adminMode" text="Admin">
                        <toggleGroup>
                            <fx:reference source="roleToggle"/>
                        </toggleGroup>
                    </RadioButton>
                </HBox>

                <HBox alignment="CENTER_RIGHT">
                    <Hyperlink fx:id="forgotLink" text="Forgot password?" onAction="#onForgotPassword"/>
                </HBox>

                <Button text="Sign in" id="primaryBtn" onAction="#onLogin"/>

                <HBox alignment="CENTER" spacing="6">
                    <Label text="New here?"/>
                    <Hyperlink text="Create account" onAction="#goToRegister"/>
                </HBox>

                <Label fx:id="statusLabel" id="statusLabel" wrapText="true"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
