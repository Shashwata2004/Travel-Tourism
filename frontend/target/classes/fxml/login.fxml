<?xml version="1.0" encoding="UTF-8"?>

<!-- Lays out the login view: branding on the left and the sign-in form,
     including user/admin toggle and navigation links, on the right.
     - Uses a BorderPane so the hero art stays fixed beside the form
     - Packs controls in a card for clear spacing and validation messages -->
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.travel.frontend.controller.LoginController"
            stylesheets="@/css/login.css"
            styleClass="loginRoot">
    <!-- Left: brand hero with overlay -->
    <left>
        <StackPane prefWidth="520" id="brandPane" fx:id="brandPane">
            <Pane styleClass="brandScrim"/>
            <VBox alignment="CENTER" spacing="16" styleClass="brandCopy" fx:id="brandCopy">
                <Label text="Travel &amp; Tourism" id="brandTitle"/>
                <Label text="Plan trips. Manage bookings. Explore destinations." id="brandSubtitle" wrapText="true"/>
            </VBox>
        </StackPane>
    </left>

    <!-- Right: gradient backdrop + glass card -->
    <center>
        <StackPane styleClass="formHost">
            <VBox id="card" fx:id="cardBox" styleClass="loginCard" maxWidth="480" spacing="18">
                <VBox spacing="6">
                    <Label text="Welcome back ðŸ‘‹" id="cardTitle"/>
                    <Label text="Sign in to continue your journey" id="cardSubtitle"/>
                </VBox>

                <VBox spacing="10">
                    <Label text="Email" styleClass="fieldLabel"/>
                    <TextField fx:id="emailField" promptText="you@example.com"/>
                </VBox>

                <VBox spacing="10">
                    <Label text="Password" styleClass="fieldLabel"/>
                    <PasswordField fx:id="passwordField" promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"/>
                </VBox>

                <!-- Login mode selection: User (default) or Admin -->
                <HBox spacing="12" alignment="CENTER_LEFT" styleClass="roleRow">
                    <fx:define>
                        <ToggleGroup fx:id="roleToggle"/>
                    </fx:define>
                    <Label text="Login as" styleClass="fieldLabel"/>
                    <RadioButton fx:id="userMode" text="User" selected="true">
                        <toggleGroup>
                            <fx:reference source="roleToggle"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="adminMode" text="Admin">
                        <toggleGroup>
                            <fx:reference source="roleToggle"/>
                        </toggleGroup>
                    </RadioButton>
                </HBox>

                <HBox alignment="CENTER_RIGHT">
                    <Hyperlink fx:id="forgotLink" text="Forgot password?" onAction="#onForgotPassword"/>
                </HBox>

                <Button text="Sign in" id="primaryBtn" onAction="#onLogin" maxWidth="Infinity"/>

                <HBox alignment="CENTER" spacing="6">
                    <Label text="New here?" />
                    <Hyperlink text="Create account" onAction="#goToRegister" styleClass="createAccount"/>
                </HBox>

                <Label fx:id="statusLabel" id="statusLabel" wrapText="true"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
