<?xml version="1.0" encoding="UTF-8"?>

<!-- Defines the personal information dashboard with unified navbar, moving blobs, and profile form. -->
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.travel.frontend.controller.HomeController"
           stylesheets="@/css/login.css,@/css/profile.css,@/css/packages.css"
           styleClass="profilePage packagesRoot">
    <children>
        <Pane fx:id="blobLayer" styleClass="blobLayer">
            <children>
                <Circle fx:id="blobA" centerX="160" centerY="160" radius="180" styleClass="blobA"/>
                <Circle fx:id="blobB" centerX="840" centerY="520" radius="200" styleClass="blobB"/>
                <Circle fx:id="blobC" centerX="1180" centerY="240" radius="180" styleClass="blobC"/>
            </children>
        </Pane>

        <BorderPane>
            <top>
                <fx:include source="navbar.fxml" fx:id="navbar"/>
            </top>
            <center>
                <StackPane>
                    <VBox spacing="20" maxWidth="900" alignment="TOP_CENTER">
                        <VBox spacing="0" maxWidth="820" styleClass="profileCard">
                            <StackPane styleClass="profileHeader">
                                <VBox spacing="6" alignment="CENTER_LEFT">
                                    <Label text="Personal Information" styleClass="profileHeaderTitle"/>
                                    <Label text="Update your profile information" styleClass="profileHeaderSubtitle"/>
                                </VBox>
                            </StackPane>

                            <VBox spacing="14" styleClass="profileBody">
                                <padding>
                                    <Insets top="16" right="16" bottom="16" left="16"/>
                                </padding>
                                <Label text="Email" styleClass="profileFieldLabel"/>
                                <TextField fx:id="emailField" editable="false" styleClass="profileField"/>

                                <Label text="Username" styleClass="profileFieldLabel"/>
                                <TextField fx:id="usernameField" styleClass="profileField"/>

                                <Label text="Full Name" styleClass="profileFieldLabel"/>
                                <TextField fx:id="fullNameField" styleClass="profileField"/>

                                <Label text="ID Type" styleClass="profileFieldLabel"/>
                                <HBox spacing="12" styleClass="pillRow">
                                    <fx:define>
                                        <ToggleGroup fx:id="idTypeGroup" />
                                    </fx:define>
                                    <ToggleButton fx:id="idNid" text="NID" styleClass="pillToggle">
                                        <toggleGroup><fx:reference source="idTypeGroup"/></toggleGroup>
                                    </ToggleButton>
                                    <ToggleButton fx:id="idBirth" text="Birth Certificate" styleClass="pillToggle">
                                        <toggleGroup><fx:reference source="idTypeGroup"/></toggleGroup>
                                    </ToggleButton>
                                    <ToggleButton fx:id="idPassport" text="Passport" styleClass="pillToggle">
                                        <toggleGroup><fx:reference source="idTypeGroup"/></toggleGroup>
                                    </ToggleButton>
                                </HBox>

                                <Label text="ID Number" styleClass="profileFieldLabel"/>
                                <TextField fx:id="idNumberField" styleClass="profileField"/>

                                <Label text="Gender" styleClass="profileFieldLabel"/>
                                <HBox spacing="12" styleClass="pillRow">
                                    <fx:define>
                                        <ToggleGroup fx:id="genderGroup" />
                                    </fx:define>
                                    <ToggleButton fx:id="genderMale" text="Male" styleClass="pillToggle">
                                        <toggleGroup><fx:reference source="genderGroup"/></toggleGroup>
                                    </ToggleButton>
                                    <ToggleButton fx:id="genderFemale" text="Female" styleClass="pillToggle">
                                        <toggleGroup><fx:reference source="genderGroup"/></toggleGroup>
                                    </ToggleButton>
                                </HBox>

                                <Label text="Location" styleClass="profileFieldLabel"/>
                                <TextField fx:id="locationField" styleClass="profileField"/>

                                <HBox alignment="CENTER_RIGHT" spacing="12">
                                    <Label fx:id="statusLabel" id="statusLabel"/>
                                    <Pane HBox.hgrow="ALWAYS"/>
                                    <Button text="Update" id="primaryBtn" onAction="#onUpdate" styleClass="profileUpdateBtn"/>
                                </HBox>
                            </VBox>
                        </VBox>
                    </VBox>
                </StackPane>
            </center>
        </BorderPane>
    </children>
</StackPane>
